{
  "compilerOptions": {
    /* Target & Module */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    /* Paths */
    "rootDir": "src",
    "outDir": "dist",

    /* Interop & features */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Types */
    "types": ["node"],

    /* Build speed & DX */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Source maps (เปิดถ้าต้องการดีบักใน dist) */
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

