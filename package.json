{
  "name": "bn9-backend-v2",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:once": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "kill:3001": "powershell -NoProfile -Command \"Get-NetTCPConnection -LocalPort 3001 -State Listen -ErrorAction SilentlyContinue | % { Stop-Process -Id $_.OwningProcess -Force }\"",
    "health": "node -e \"const http=require('http');const p=process.env.PORT||3001;http.get('http://127.0.0.1:'+p+'/health',res=>res.pipe(process.stdout)).on('error',e=>{console.error(e.message);process.exit(1)});\""
  },
  "engines": { "node": ">=18" },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3"
  }
}
